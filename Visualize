from r3e_api import R3ESharedMemory
import matplotlib.pyplot as plt
from matplotlib.animation import FuncAnimation
import time

# Initialize shared memory
shared_memory = R3ESharedMemory()
shared_memory.update_offsets()  # only needed once

# Lists to store data for plotting
times = []
velocities = []

# Create a figure and axis for the plot
fig, ax = plt.subplots(figsize=(10, 6))

# Initialize the line for velocity
line, = ax.plot([], [], label="Velocity (m/s)")

# Configure the velocity plot
ax.set_xlim(0, 10)
ax.set_ylim(0, 300)  # Adjust based on expected velocity range
ax.set_xlabel("Time (s)")
ax.set_ylabel("Velocity (m/s)")
ax.legend()

# Function to initialize the plot
def init():
    line.set_data([], [])
    return line,

# Function to update the plot
def update(frame):
    shared_memory.update_buffer()
    data = shared_memory.get_value('Player')

    if data:
        print(f"Retrieved data: {data}")  # Debug print
        current_time = time.time() - start_time
        try:
            velocity = data['Velocity']  # Accessing velocity from player data
            print(f"Time: {current_time}, Velocity: {velocity}")  # Debug print
        except KeyError:
            print("Key 'Velocity' not found in the data. Available keys:", data.keys())
            return line,

        times.append(current_time)
        velocities.append(velocity)

        # Keep only the last 100 data points for a smooth real-time graph
        times_trimmed = times[-100:]
        velocities_trimmed = velocities[-100:]

        line.set_data(times_trimmed, velocities_trimmed)

        ax.set_xlim(times_trimmed[0], times_trimmed[-1])
        ax.set_ylim(min(velocities_trimmed) - 5, max(velocities_trimmed) + 5)
    return line,

# Capture the start time
start_time = time.time()

# Create an animation that updates the plot
ani = FuncAnimation(fig, update, init_func=init, blit=True, interval=100, save_count=100)

plt.tight_layout()
plt.show()
